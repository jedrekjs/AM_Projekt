<h2>Nowe zadanie</h2>
<%= error_msg %>
<form action="/problems" method="POST">
    <div class="problem-form">
        <div>
            <label>Nazwa zadania</label>
        </div>
        <div>
            <input type="text" name="title" value="<%= problem.title %>">
        </div>
        <div>
            <label>Treść</label>
        </div>
        <div>
            <textarea name="contents" rows="10" cols="30"><%= problem.contents %></textarea>
        </div>
        <div>
            <label>Rozwiązanie</label>
        </div>
        <div>
            <textarea name="explanation" rows="10" cols="30"><%= problem.explanation %></textarea>
        </div>
        <div>
            <label>Odpowiedź</label>
        </div>
        <div>
            <textarea name="solution" rows="10" cols="30"><%= problem.solution %></textarea>
        </div>
        <div>
            <label>Poziom</label>
            <input list="school" name="school">
            <datalist id="school">
                <option value="Liceum">
                <option value="Szkoła podstawowa">
            </datalist>
        </div>
    </div>
    <div class="bottom-buttons-container">
        <a href="/dashboard" class="free-link">Anuluj</a>
        <button type="submit" class="free-link">Utwórz</button>
    </div>

</form>